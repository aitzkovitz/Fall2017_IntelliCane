<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="project2017.intellic.LoginActivity" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="30dp"
            android:layout_weight="0.12"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/intellicane" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/email"
            android:textSize="60sp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary3" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:hint="@string/password"
            android:textSize="60sp"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textColorHint="@color/colorPrimary3" />


        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pinkbutton"
            android:onClick="loginPublic"
            android:text="@string/Login"
            android:padding="20dp"
            android:textSize="48sp"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/buttonCreateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/bluebutton"
            android:onClick="createNewUser"
            android:text="@string/activity_login_create_account"
            android:textSize="48sp"
            android:padding="30dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</RelativeLayout>