<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/New_user_is_a"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            app:srcCompat="@drawable/patient" />


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="117dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/physicaltherapist" />

    </LinearLayout>



    <EditText
        android:id="@+id/newUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/newUserfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/First_Name" />

    <EditText
        android:id="@+id/newUserlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Last_Name" />

    <EditText
        android:id="@+id/newUserPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Phone"
        />
    <EditText
        android:id="@+id/newUserPhotoURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Photo_URL"
        android:inputType="textUri"/>

    <EditText
        android:id="@+id/newUserDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Display_Name"
        android:inputType="text"/>

    <RadioGroup
        android:id="@+id/newUserRoleRadio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/newUserAdminRadio"
            android:hint="@string/admin"
            android:text="@string/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/newUserTherapistRadio"
            android:hint="@string/Therapist"
            android:text="@string/Therapist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/newUserPatientRadio"
            android:hint="@string/Patient"
            android:text="@string/Patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>


    <Button
        android:id="@+id/buttonCreateUser"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:onClick="createNewUserRequest"
        android:text="@string/Add_User"
        android:textColor="@color/colorPrimary2"/>


</LinearLayout>